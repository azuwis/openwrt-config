opkg_install uhttpd

opkg_update
if [ "$(opkg info adblock | wc -l)" -gt 0 ]; then
    opkg_install adblock
else
    opkg_install /tmp/adblock.ipk
fi

if [ "$(find /var/dnsmasq.d/ -maxdepth 1 -type f -name 'adb_list.*' | wc -l)" -eq 0 ]; then
    echo "update adblock"
    /usr/bin/adblock-update.sh &
fi

add_cron '0 4 * * 0,3 /etc/init.d/adblock start'
