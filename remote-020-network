chmod 600 /etc/config/network

uci_batch_set "$config_network"
service reload network

if uci_exists wireless; then
   uci_delete wireless.radio0.disabled
   uci_delete wireless.radio1.disabled
   uci_exists wireless.radio0 && uci set wireless.radio0.country=CN
   uci_exists wireless.radio1 && uci set wireless.radio1.country=CN
    uci_batch_set "$config_wireless"
    if uci -q show wireless | grep -qF 'iapp_interface'; then
        opkg_remove wpad-mini
        opkg_install wpad

        # https://dev.openwrt.org/ticket/19175
        if grep -q uci_get_state /lib/netifd/hostapd.sh && \
                ! grep -qxF '. /lib/config/uci.sh' /lib/netifd/hostapd.sh
        then
            echo 'patch /lib/netifd/hostapd.sh'
            sed -i '1s#^#. /lib/config/uci.sh\n#' /lib/netifd/hostapd.sh
        fi
    fi
    service reload network wireless
fi

# uci batch <<EOF
# set dhcp.lan.dhcpv6='disabled'
# EOF
# service restart odhcpd dhcp
