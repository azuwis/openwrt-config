setup_mwan() {
    # network
    oc_opkg_install kmod-macvlan

    uci set network.wan.metric=10
    for i in $(seq 2 "$((config_mwan + 1))")
    do
        uci batch <<EOF
set network.macvlan_wan${i}=device
set network.macvlan_wan${i}.name=macvlan-wan${i}
set network.macvlan_wan${i}.type=macvlan
set network.macvlan_wan${i}.ifname=$(uci -q get network.wan.ifname)
set network.wan${i}=interface
set network.wan${i}.ifname=macvlan-wan${i}
set network.wan${i}.proto=pppoe
set network.wan${i}.username=$(uci -q get network.wan.username)
set network.wan${i}.password=$(uci -q get network.wan.password)
set network.wan${i}.ipv6=0
set network.wan${i}.metric=${i}0
EOF
    done
    oc_service reload network

    # firewall
    for i in $(seq 2 "$((config_mwan + 1))")
    do
        oc_uci_add_list 'firewall.@zone[1].network' "wan${i}"
    done
    oc_service reload firewall 2>/dev/null

    # mwan3
    oc_opkg_install mwan3

    (
        cat <<EOF
config interface 'wan'
	option enabled '1'
EOF
        for i in $(seq 2 "$((config_mwan + 1))")
        do
            cat <<EOF
config interface 'wan${i}'
	option enabled '1'
EOF
        done
        cat <<EOF
config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config policy 'wan_only'
	list use_member 'wan_m1_w3'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'wan_only'
EOF
    ) | uci import mwan3

    if oc_uci_commit mwan3; then
        echo "restart mwan3"
        mwan3 restart 2>/dev/null
    fi
}

if [ "$config_mwan" -gt 0 ]; then
    setup_mwan
fi
