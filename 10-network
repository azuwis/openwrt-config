opkg_install 6to4

uci_delete network.globals.ula_prefix
uci batch <<EOF
set network.wan.ipv6='0'
set network.wan.password='${network_wan_password}'
set network.wan.proto='${network_wan_proto}'
set network.wan.username='${network_wan_username}'
set network.wan6.ifname=''
set network.wan6.proto='6to4'
EOF
service reload network

if uci_exists wireless; then
  uci_delete wireless.radio0.disabled wireless.radio1.disabled
  uci batch <<EOF
set wireless.@wifi-iface[0].encryption='${wireless_iface0_encryption}'
set wireless.@wifi-iface[0].key='${wireless_iface0_key}'
set wireless.@wifi-iface[0].ssid='${wireless_iface0_ssid}'
set wireless.@wifi-iface[1].encryption='${wireless_iface1_encryption}'
set wireless.@wifi-iface[1].key='${wireless_iface1_key}'
set wireless.@wifi-iface[1].ssid='${wireless_iface1_ssid}'
set wireless.radio1.channel='165'
EOF
  service reload network wireless
fi
